.content-title
  margin 80px 0 40px
  display block
  text-align center
  
  &.content-title--nohead
    margin-top 30px
  
.content-title-desc
  display block
  color c-grey2
  font-weight normal
  margin 2px 0 0
  
projectcard-size = 358px
projectcard-padding = 15px

.projectcard
  position relative
  background-color c-black2
  border 1px solid c-grey
  border-radius 4px
  display block
  float left
  width projectcard-size
  height 280px
  margin projectcard-padding
  color inherit
  text-decoration none
  transform translate(0,0)
  overflow hidden
  box-shadow 0 0 5px c-shadow
  transition all .3s
  
  &:hover, &:focus
    border-color c-accent
    
  &:hover
    transform translate(0px, -5px)
    box-shadow 0 10px 20px black
    
  @media m-tablet-s
    float none
    margin-left auto
    margin-right auto
    width 100%
    
.projectcard-content
  position absolute
  top 0
  left 0
  right 0
  z-index 30
  text-shadow 0 0px 2px alpha(c-black, .6)
  
.projectcard-header
  padding projectcard-padding
  background-color rgba(7, 7, 8, 0.62)
  width 110%
  
.projectcard-title
  transition color .3s
  margin 0
  .projectcard:hover &
    color c-accent
    
.projectcard-body
  padding 0 projectcard-padding

.projectcard-subtitle
  color c-grey3
  
  &:before
    content " "
    position relative
    top -3px
    height 3px
    width @height
    border-radius 100px
    background-color c-grey3
    display inline-block
    margin 0 10px


.projectcard-imgwrapper
  position absolute
  top 0
  left 0
  height 100%
  width 100%

.projectcard-img
  position absolute
  display block
  min-height 100%
  min-width 100%
  opacity 0.3
  transition .4s
  
  .projectcard:hover &
    opacity 0.5
    transform scale(1.15)
    transition .5s .2s

.projectcard-imgtriangles
  position absolute
  height 200%
  width @height
  box-shadow -35px 0px 0px alpha(c-black, .3), -100px 0px 0px alpha(c-black, .3), -174px 0px 0px alpha(c-black, .2)
  transform rotate(45deg) translate(51%, 0%)
  transition .4s
  
  .projectcard:hover &
    box-shadow -50px 0px 0px alpha(c-black, .3), -140px 0px 0px alpha(c-black, .3), -160px 0px 0px alpha(c-black, .2)
    transform rotate(45deg) translate(70%, 0%);
    transition .5s .2s
    
// project page

.project-wrapper
  padding 20px
  background-color c-black2
  border 1px solid c-grey
  border-radius 4px
  box-shadow 0 2px 3px alpha(black, 0.6)
  
.project-title
  position relative
  margin-top 3px
  padding-bottom 5px
  border-bottom 1px solid c-black
  
  & small
    display inline-block
    color c-grey3
    
    &:before
      display inline-block
      margin 0 10px
      content: "-"
      
.project-image
  display block
  float left
  max-height 200px
  margin-right 15px
  border 2px solid c-white
  border-radius 4px
  box-shadow 0 2px 3px alpha(c-black, 0.6)
  
  @media m-tablet
    max-width 150px
    
  @media m-phablet-s
    float none
    margin-right auto
    margin-left auto
    max-width 100%
  
.project-subtitle  
  .fa
    display inline-block
    margin-right 5px
    color c-accent

.project-tech
  display inline-block
  margin 2px
  padding 2px 7px
  border-radius 100px
  background-color c-grey2
  text-shadow 0 0 1px c-black  
  list-style-type none
  
.project-links
  display inline-block
  position absolute
  right 0

.project-link
  display inline-block
  text-align center
  color c-grey3
  text-decoration none
  font-size 12px
  transition .3s
  margin-left 15px
  
  &:hover
    color c-accent
  
  .fa
    display inline-block
    vertical-align middle
    font-size 18px
    margin-right 5px
    
.project-link-name
  display inline-block
  vertical-align middle
  
.project-demo-iframewrapper
  position absolute
  top 50px
  left 0px
  right 0px
  bottom 0px
  overflow hidden

.project-demo-iframe
  height 100%
  width 100%
  border 0
