.content-title
  margin 80px 0 40px
  display block
  text-align center
  
.content-title-desc
  display block
  color c-grey2
  font-weight normal
  margin 2px 0 0
  
projectcard-size = 358px
projectcard-padding = 15px

.projectcard
  position relative
  background-color c-black2
  border 1px solid c-grey
  border-radius 4px
  display block
  float left
  width projectcard-size
  height 280px
  margin projectcard-padding
  color inherit
  text-decoration none
  transform translate(0,0)
  overflow hidden
  box-shadow 0 0 5px c-shadow
  transition all .3s
  
  &:hover, &:focus
    border-color c-accent
    
  &:hover
    transform translate(0px, -5px)
    box-shadow 0 10px 20px black
    
.projectcard-content
  position absolute
  padding projectcard-padding
  z-index 30
  text-shadow 0 0px 2px alpha(c-black, .6)
  
.projectcard-header
  margin -(projectcard-padding)
  margin-bottom -@margin
  padding -@margin
  background-color rgba(7, 7, 8, 0.62)
  width 110%
  
.projectcard-title
  transition color .3s
  margin 0
  .projectcard:hover &
    color c-accent

.projectcard-subtitle
  color c-grey3
  
  &:before
    content " "
    position relative
    top -3px
    height 3px
    width @height
    border-radius 100px
    background-color c-grey3
    display inline-block
    margin 0 10px


.projectcard-imgwrapper
  position absolute
  top 0
  left 0
  height 100%
  width 100%

.projectcard-img
  position absolute
  display block
  height 100%
  width 100%
  opacity 0.3
  transition .4s
  
  .projectcard:hover &
    opacity 0.5
    transform scale(1.15)
    transition .5s .2s

.projectcard-imgtriangles
  position absolute
  height 200%
  width @height
  box-shadow -35px 0px 0px alpha(c-black, .3), -100px 0px 0px alpha(c-black, .3), -174px 0px 0px alpha(c-black, .2)
  transform rotate(45deg) translate(51%, 0%)
  transition .4s
  
  .projectcard:hover &
    box-shadow -50px 0px 0px alpha(c-black, .3), -140px 0px 0px alpha(c-black, .3), -160px 0px 0px alpha(c-black, .2)
    transform rotate(45deg) translate(70%, 0%);
    transition .5s .2s
    
