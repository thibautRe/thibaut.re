header-height = 50px;

.header--main
  width 100%
  opacity 0
  
  &.is-visible
    animation fade-in .5s 0s forwards
    

.header--main-nav
  width 100%
  height header-height
  text-align center
  background-color alpha(c-black2, .95)
  border-bottom 1px solid c-grey
  box-shadow 0 2px 2px c-shadow

.header--main-me
  display inline-block
  height 60px
  width 60px
  border-radius 100px
  margin 3px 10px 0
  vertical-align top
  border 2px solid white
  transition border-color .3s
  
  .header--main-link:hover & {
    border-color c-accent
  }

.header--main-link
  color inherit
  text-decoration none
  transition color .3s
  &:hover
    color c-accent

.header--main-title
  display inline-block
  height header-height
  line-height header-height
  margin auto