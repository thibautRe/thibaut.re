header-height = 50px;

.header--main
  display block
  height header-height
  width 100%
  text-align center
  opacity 0
  background-color c-black2
  border-bottom 1px solid c-grey
  box-shadow 0 2px 2px c-shadow
  
  &.is-visible
    animation fade-in .5s 0s forwards
    
.header--main-me
  display inline-block
  height header-height - 5px
  width @height
  border-radius 100px
  margin -10px 10px 0
  vertical-align middle
  border 1px solid white
  transition border-color .3s
  
  .header--main-link:hover & {
    border-color c-accent
  }
    
.header--main-link
  color inherit
  text-decoration none
  transition color .3s
  &:hover
    color c-accent

.header--main-title
  display inline-block
  height header-height
  line-height header-height
  margin auto